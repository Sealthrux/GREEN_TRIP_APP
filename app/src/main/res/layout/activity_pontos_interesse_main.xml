<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    tools:context=".Pontos_Interesse_Main"
    tools:layout_editor_absoluteX="135dp"
    tools:layout_editor_absoluteY="1dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipHoteis"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginTop="140dp"
        android:checkable="true"
        android:elevation="4dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/h_teis"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/hoteis"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/FiltrosBoxSelector"
        android:layout_width="344dp"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/filtrosbox"
        android:elevation="3dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipCultura"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="320dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/cultura"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/cultura"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipTransporte"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="264dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/transporte"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/transporte"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipNatureza"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginTop="200dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/natureza"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/natureza"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDesporto"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="264dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/desporto"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/desporto"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/pontosProximos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/pontos_pr_ximos"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipMuseus"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="200dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/museus"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/museus"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipRest"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="140dp"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/restaura_o"
        android:textSize="14sp"
        android:typeface="normal"
        app:chipIcon="@drawable/restauracao"
        app:chipIconSize="16dp"
        app:chipCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarButton"
        app:rippleColor="#FFFFFF"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/PontosDeInteresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/pontos_de_interesse"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pontosdeinteresseICON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:contentDescription="@string/PontoIntLogo"
        app:layout_constraintBottom_toBottomOf="@+id/PontosDeInteresse"
        app:layout_constraintStart_toEndOf="@+id/PontosDeInteresse"
        app:layout_constraintTop_toTopOf="@+id/PontosDeInteresse"
        app:srcCompat="@drawable/pontosinteresseexeimg" />

    <ImageButton
        android:id="@+id/TopBarButton"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topbargreen"
        tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/MyGreenTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montserrat_bold_italic"
        android:text="@string/my_green_trip"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/TopBarButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/HomeButtonTop"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/homebutton"
        app:layout_constraintBottom_toBottomOf="@+id/TopBarButton"
        app:layout_constraintEnd_toEndOf="@+id/TopBarButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/homebutton"
        tools:ignore="TouchTargetSizeCheck" />


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp"
        app:contentPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pontosProximos"
        app:layout_constraintVertical_bias="0.208">

        <ImageView
            android:id="@+id/PontoThumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/thumbnailpontointeresse"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp" />

        <TextView
            android:id="@+id/PontoInteresseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/pontointeresseinfotext"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TituloPontoInteresse"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Titulopontointeressetext"
            android:textColor="#000000"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>